@model IEnumerable<BTL_64132201.Models.NavbarItem>

<header class="header_section">
    <div class="container-fluid">
        <div class="container px-0">
            <nav class="navbar navbar-expand-lg custom_nav-container">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo-store.png" style="height: 50px" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="navbar-nav mx-auto">
                        @foreach (var item in Model)
                        {
                            if (item.subItems?.Count() == 0)
                            {
                                <a href="@item.MenuUrl" class="nav-item nav-link @(item!.MenuUrl == Context.Request.Path ? "active" : "")" style="color: white">
                                    @item.Title
                                </a>
                            }
                            else
                            {
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">@item.Title</a>
                                    <div class="dropdown-menu" style="background-color: #063547">
                                        @foreach (var subItem in item!.subItems!)
                                        {
                                            if (subItem.subItems?.Count() == 0){
                                                <a href="@subItem.MenuUrl" class="dropdown-item">@subItem.Title</a>
                                            }
                                            else{
                                                <div class="nav-item dropdown">
                                                    <a href="#" class="nav-link dropdown-toggle" id="subNavbarMenu-@subItem.Id" data-toggle="dropdown">@subItem.Title</a>
                                                    <div class="dropdown-menu" aria-labelledby="subNavbarMenu-@subItem.Id" style="background-color: #063547">
                                                        @foreach(var menu in subItem!.subItems!){
                                                            <a href="@menu.MenuUrl" class="dropdown-item" style="color: white">@menu.Title</a>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="d-flex m-3 me-0">
                    <form class="search_form">
                        <input type="text" class="form-control" placeholder="Tìm kiếm...">
                        <button class="" type="submit">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </button>
                    </form>
                    <div id="cart_view_component" class="py-2 px-2">
                        @await Component.InvokeAsync("Cart")
                    </div>
                    <div class="top-link py-2 px-2">
                        @if (@Context.User.Identity.IsAuthenticated)
                        {
                            <label style="font-weight:400; font-size:12px; color:white; margin-top:2px "></label>
                            <a asp-area="" asp-controller="Customer" asp-action="Profile" class="text-white ">
                                <small class="text-white mx-2 " style="font-weight:bold">
                                    @Context.User.Identity.Name
                                </small>
                                <i class="fas fa-user fa-2x ps-2 mx-2" style="color: white"></i>
                            </a>
                            <a asp-area="" asp-controller="Customer" asp-action="SignOut"
                               class="text-white font-weight-bold">
                                <small class="text-white mx-2" style="font-weight:bold">Đăng xuất</small>
                            </a>
                        }
                        else
                        {
                            <a asp-area="" asp-controller="Customer" asp-action="SignIn" class="text-white"><small class="text-white mx-1">Đăng nhập</small>|</a>
                            <a asp-area="" asp-controller="Customer" asp-action="SignUp" class="text-white"><small class="text-white mx-1">Đăng ký</small></a>
                        }
                    </div>
                </div>
            </nav>
        </div>
    </div>
</header>